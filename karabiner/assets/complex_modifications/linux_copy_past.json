{
  "title": "Linux-style copy/paste on macOS (Ctrl+C/V/X/Z/A → Cmd+C/V/X/Z/A; not in terminals)",
  "rules": [
    {
      "description": "Ctrl+C/V/X/Z/A → Cmd+C/V/X/Z/A (except in terminals)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^net\\.kovidg\\.kitty$",
                "^org\\.alacritty$",
                "^dev\\.warp\\.Warp(-Stable)?$",
                "^com\\.wez\\.wezterm$"
              ]
            }
          ]
        },
        {
          "type": "basic",
